#!/usr/bin/env bash
set -euo pipefail   # Strict mode
IFS=$'\n\t'

# Usage: restorecode <GitHub-project-name> [tag]
# Example: restorecode MyApp v1.2.3

if [[ $# -lt 1 ]]; then
  echo "Usage: $0 <GitHub-project-name> [tag]"
  exit 1
fi

# Required project name
PROJECT="$1"
shift

# Environment / path settings
OWNER="WebSurfinMurf"
BASE_DIR="${HOME}/projects"
TARGET_DIR="${BASE_DIR}/${PROJECT}"
DEFAULT_BRANCH="main"

# Ensure repo exists
if [[ ! -d "${TARGET_DIR}/.git" ]]; then
  echo "Error: Project directory '${TARGET_DIR}' does not exist." >&2
  exit 1
fi
cd "${TARGET_DIR}"

# Fetch all tags and branches
echo "â¬ Fetching from origin (branches & tags)â€¦"
git fetch origin --tags

# Determine tag
if [[ -n "${1-}" ]]; then
  TAG="$1"
else
  # List available versions
  echo "ğŸ” Available versions:"
  git tag --list 'v[0-9]*.[0-9]*.[0-9]*' --sort=v:refname
  echo
  # Prompt user
  read -p "Enter version to restore: " TAG
  if [[ -z "$TAG" ]]; then
    echo "âš ï¸  No version entered; aborting."
    exit 1
  fi
fi

echo "ğŸ”§ restorecode for '${PROJECT}' at ${TARGET_DIR} (tag: '${TAG}')"

# Checkout and merge
echo "ğŸŒ¿ Checking out '${DEFAULT_BRANCH}'â€¦"
git checkout "${DEFAULT_BRANCH}"

echo "ğŸ”— Fast-forward merging tag '${TAG}'â€¦"
git merge --ff-only "${TAG}"

# Push the restored state
echo "ğŸš€ Pushing '${DEFAULT_BRANCH}' to originâ€¦"
git push origin "${DEFAULT_BRANCH}"

echo "âœ… restorecode complete: '${DEFAULT_BRANCH}' is now at '${TAG}'"
