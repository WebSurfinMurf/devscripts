#!/usr/bin/env bash
set -euo pipefail   # Strict mode
IFS=$'\n\t'

# Usage: restorecode <GitHub-project-name> [tag]
# Example: restorecode MyApp v1.2.3

if [[ $# -lt 1 ]]; then
  echo "Usage: $0 <GitHub-project-name> [tag]"
  exit 1
fi

# Required project name
PROJECT="$1"
shift

# Environment / path settings
OWNER="WebSurfinMurf"
BASE_DIR="${HOME}/projects"
TARGET_DIR="${BASE_DIR}/${PROJECT}"
DEFAULT_BRANCH="main"

# Ensure repo exists
if [[ ! -d "${TARGET_DIR}/.git" ]]; then
  echo "Error: Project directory '${TARGET_DIR}' does not exist." >&2
  exit 1
fi
cd "${TARGET_DIR}"

# Fetch all tags and branches
echo "â¬ Fetching from origin (branches & tags)â€¦"
git fetch origin --tags

# Determine tag
if [[ -n "${1-}" ]]; then
  TAG="$1"
else
  # List available versions with annotation
  echo "ğŸ” Available versions:" 
  git for-each-ref --format '%(refname:short): %(contents:subject)' refs/tags | grep -E '^v[0-9]+\.[0-9]+\.[0-9]+:'
  echo
  # Prompt user
  echo "Enter version to restore, or 'x' to exit:" 
  read -r TAG
  if [[ "$TAG" == "x" ]]; then
    echo "âœ–ï¸  Aborted by user."
    exit 0
  fi
  if [[ -z "$TAG" ]]; then
    echo "âš ï¸  No version entered; aborting."
    exit 1
  fi
fi

echo "ğŸ”§ restorecode for '${PROJECT}' at ${TARGET_DIR} (tag: '${TAG}')"

# Checkout default branch
echo "ğŸŒ¿ Checking out '${DEFAULT_BRANCH}'â€¦"
git checkout "${DEFAULT_BRANCH}"

# Create a backup branch before reset
timestamp=$(date +'%Y%m%d%H%M%S')
backup_branch="${DEFAULT_BRANCH}-backup-${timestamp}"
echo "ğŸ“¦ Creating backup branch '${backup_branch}'â€¦"
git branch "${backup_branch}"

echo "ğŸš€ Pushing backup branch to originâ€¦"
git push origin "${backup_branch}"

# Hard reset to the chosen tag
echo "ğŸ”„ Resetting '${DEFAULT_BRANCH}' to tag '${TAG}'â€¦"
git reset --hard "${TAG}"

# Force push the reset state
echo "ğŸš€ Force-pushing '${DEFAULT_BRANCH}' to originâ€¦"
git push --force-with-lease origin "${DEFAULT_BRANCH}"

echo "âœ… restorecode complete: '${DEFAULT_BRANCH}' reset to '${TAG}' with backup at '${backup_branch}'"
