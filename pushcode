#!/usr/bin/env bash
set -euo pipefail

# Usage: pushcode <commit-message> <GitHub-project-name>
# Example: pushcode "Fix typo in README" MyNewApp

if [ $# -ne 2 ]; then
  echo "Usage: $0 <commit-message> <GitHub-project-name>"
  exit 1
fi

COMMIT_MSG="$1"
PROJECT="$2"
BASE_DIR="${HOME}/projects"
TARGET_DIR="${BASE_DIR}/${PROJECT}"
DEFAULT_BRANCH="main"

echo "üîß pushcode ‚Üí ${TARGET_DIR}"

# Ensure the target dir exists
if [ ! -d "${TARGET_DIR}" ]; then
  echo "Error: Project directory '${TARGET_DIR}' does not exist." >&2
  exit 1
fi

cd "${TARGET_DIR}"

# Sync before pushing
echo "‚è¨ Pulling latest changes on '${DEFAULT_BRANCH}'..."
git checkout "${DEFAULT_BRANCH}"
git pull --ff-only origin "${DEFAULT_BRANCH}"

# Stage, commit, and push
echo "üìù Staging all changes..."
git add --all

echo "üí¨ Committing with message: ${COMMIT_MSG}"
git commit -m "${COMMIT_MSG}"

echo "üöÄ Pushing to origin/${DEFAULT_BRANCH}..."
git push origin "${DEFAULT_BRANCH}"

echo "‚úÖ pushcode complete for project '${PROJECT}'."
